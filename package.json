{
  "name": "moshes-tasks",
  "productName": "Moshe's Tasks",
  "version": "1.2.1",
  "main": "main.js",
  "author": "Moshe Frost",
  "repository": "https://github.com/moshebaricdo/moshes-tasks",
  "scripts": {
    "start": "electron .",
    "build": "webpack",
    "package": "electron-packager . \"Moshe's Tasks\" --platform=darwin --arch=x64 --prune=true --icon=src/media/moshetask.icns --out=release-builds/v$npm_package_version",
    "dist": "webpack && electron-builder --mac",
    "release": "webpack && electron-builder --mac --publish always"
  },
  "dependencies": {
    "electron-updater": "6.1.7",
    "react": "18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@babel/core": "7.22.10",
    "@babel/preset-env": "7.22.10",
    "@babel/preset-react": "7.22.5",
    "babel-loader": "9.1.3",
    "css-loader": "6.7.3",
    "electron": "25.3.0",
    "electron-builder": "24.6.4",
    "electron-packager": "17.1.1",
    "style-loader": "3.3.1",
    "webpack": "5.76.2",
    "webpack-cli": "5.0.1",
    "webpack-dev-server": "4.11.1"
  },
  "build": {
    "appId": "com.moshefrost.moshestasks",
    "productName": "Moshe's Tasks",
    "mac": {
      "icon": "src/media/moshetask.icns",
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "icon": "src/media/moshetask.icns"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "public/index.html",
      "src/media/moshetask.icns"
    ],
    "directories": {
      "buildResources": "src/media"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "moshebaricdo",
        "repo": "moshes-tasks"
      }
    ]
  }
}
